schema {
    query: Query
    mutation: Mutation
}

type Mutation {
    signInUser(login: String!, password: String!): SingInPayload!
}

type Query {
    me: User
    users(offset: Int = 0, count: Int = 10): [User]
    user(id: ID!): User
    node(id: ID!): Node
}

scalar Date

interface Node {
    id: ID!
}

type SingInPayload {
    accessToken: String
    user: User
}

type User implements Node {
    id: ID!
    name: String!
    email: String!
    activityTime: Date!

    avatar: Avatar
    friends(offset: Int = 0, count: Int = 10): [User]
    photos(offset: Int = 0, count: Int = 10): [Photo]
}


enum AvatarSize {
    SMALL
    MEDIUM
    BIG
}

type Avatar implements Node {
    id: ID!
    url(size: AvatarSize = SMALL): String!
}

type Photo implements Node {
    id: ID!
    src: String!
    owner: User!

    comments(offset: Int = 0, count: Int = 10): [Comment]
}

type Comment implements Node {
    id: ID!
    text: String!
}
